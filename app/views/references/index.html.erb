<h1>Listing References</h1>

<table>
  <thead>
    <tr>
      <th>Key</th>
      <th>Entry Type</th>
      <th>Author</th>
      <th>Title</th>
      <th>Journal</th>
      <th>Year</th>
      <th>Volume</th>
      <th>Number</th>
      <th>Pages</th>
      <th>Month</th>
      <th>Note</th>
      <th>Publisher</th>
      <th>Series</th>
      <th>Address</th>
      <th>Edition</th>
      <th>Booktitle</th>
      <th>Editor</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @references.each do |reference| %>
      <tr>
        <td><%= link_to reference.key, reference %></td>
        <td><%= reference.entry_type %></td>
        <td><%= reference.author %></td>
        <td><%= reference.title %></td>
        <td><%= reference.journal %></td>
        <td><%= reference.year %></td>
        <td><%= reference.volume %></td>
        <td><%= reference.number %></td>
        <td><%= reference.pages %></td>
        <td><%= reference.month %></td>
        <td><%= reference.note %></td>
        <td><%= reference.publisher %></td>
        <td><%= reference.series %></td>
        <td><%= reference.address %></td>
        <td><%= reference.edition %></td>
        <td><%= reference.booktitle %></td>
        <td><%= reference.editor %></td>
        <td><%= reference.organization %></td>
        <td><%= link_to 'Show', reference %></td>
        <!-- <td><%= link_to 'Edit', edit_reference_path(reference) %></td> -->
        <td><%= link_to 'Destroy', reference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

